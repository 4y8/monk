{
    "manifest_version": 2,
    "name": "monk",
    "version": "0.1",

    "description": "stay focus",

    "icons" : {
	"512": "icon.png"
    },

    "background": {
	"scripts": ["background.js"]
    },
    "browser_action": {
	"default_title": "stay focus"
    },

    
    "content_scripts": [
	{
	    "matches": ["<all_urls>"],
	    "js": ["monk.js"]
	}
    ],
    "permissions" : ["storage"],
    "options_ui" : {
	"browser_style": true,
	"page" : "options.html"
    }
}
